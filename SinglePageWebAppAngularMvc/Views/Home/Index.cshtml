@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>My app</title>


    <script src="~/Scripts/angular.js"></script>
    <script src="~/Scripts/angular-route.js"></script>


    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.4.9/angular-animate.js"></script>
    <script src="~/Scripts/jquery-3.1.1.min.js"></script>



    <script src="~/css/Scripts/bootstrap.min.js"></script>
    <script src="~/css/Scripts/ui-bootstrap-tpls-1.1.2.min.js"></script>
    <link href="~/css/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/css/bootstrap-theme.min.css" rel="stylesheet" />
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel ="stylesheet" />

    <script src="~/css/Scripts/loadingoverlay.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.5.0/Chart.js"></script>
    <script src="https://cdn.jsdelivr.net/angular.chartjs/latest/angular-chart.min.js"></script>
   <link href="~/css/css/angular-chart.min.css" rel="stylesheet" />

    <script src="~/SPA/ApiService.js"></script>



    <script src="~/SPA/Controller/ViewProductController.js"></script>
    <script src="~/SPA/Controller/GridController.js"></script>
    <script src="~/SPA/Controller/MainController.js"></script>
    <script src="~/SPA/App.js"></script>



</head>
<body>
    <div ng-app="App" ng-controller="MainController">
        <div ng-show="isError" style="padding:10px">
            <div class="alert alert-danger" role="alert">
                <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                <span class="sr-only">Web Service Error:</span>
                {{errorMessage}}
            </div>
        </div>




        <div ng-app="App" ng-controller="MainController">
            <nav class="navbar navbar-default">
                <div class="container-fluid">
                    <!-- Brand and toggle get grouped for better mobile display -->
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a class="navbar-brand" href="#">Location</a>
                    </div>

                    <!-- Collect the nav links, forms, and other content for toggling -->
                    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                        <ul class="nav navbar-nav" id="LocationSelector">
                            <li class="dropdown">
                                <a class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">{{selectedLocation.LocationName}}<span class="caret"></span></a>

                                <ul class="dropdown-menu">
                                    <li ng-repeat="x in models.locations" ng-click="changeLocation(x)"><a>{{x.LocationName}}</a></li>
                                </ul>
                            </li>
                        </ul>
                        <div class="navbar-form navbar-left" role="search">
                            <div class="form-group">
                                <input type="text" class="form-control" placeholder="Search">
                            </div>
                            <button type="submit" class="btn btn-default">Search</button>
                        </div>
                    </div><!-- /.navbar-collapse -->
                </div><!-- /.container-fluid -->
            </nav>


            <div ng-view="">

            </div>

            </div>
        </div>
</body>
</html>
